        },
        {
          "name": "Update Custom URL",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"label\": \"Updated Label\",\n  \"url\": \"https://updated-url.com\",\n  \"icon\": \"new-icon\",\n  \"isVisible\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/me/custom-urls/{{url_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "me", "custom-urls", "{{url_id}}"]
            }
          }
        },
        {
          "name": "Delete Custom URL",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/me/custom-urls/{{url_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "me", "custom-urls", "{{url_id}}"]
            }
          }
        },
        {
          "name": "Reorder Custom URLs",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderedIds\": [\n    \"url_id_3\",\n    \"url_id_1\",\n    \"url_id_2\"\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/me/custom-urls/reorder",
              "host": ["{{base_url}}"],
              "path": ["users", "me", "custom-urls", "reorder"]
            }
          }
        },
        {
          "name": "Toggle Custom URLs Visibility",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isVisible\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/me/custom-urls/visibility",
              "host": ["{{base_url}}"],
              "path": ["users", "me", "custom-urls", "visibility"]
            }
          }
        }
      ]
    },
    {
      "name": "Portfolio View",
      "item": [
        {
          "name": "Get Public Portfolio (with Custom URLs)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/portfolio/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["portfolio", "{{user_id}}"]
