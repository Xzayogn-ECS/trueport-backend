              }
            },
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}/push-experiences",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}", "push-experiences"]
            }
          }
        }
      ]
    },
