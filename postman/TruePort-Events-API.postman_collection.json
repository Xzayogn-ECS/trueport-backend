              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}", "participants"]
            }
          }
        },
        {
          "name": "Remove Participant",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}/participants/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}", "participants", "{{user_id}}"]
            }
          }
        }
      ]
    },
